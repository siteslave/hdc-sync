#!/usr/bin/env node

'use strict';

// Get argvs;
var argv = require('minimist')(process.argv.slice(2));
// Main Sync program
var Sync = require('../lib/hdc-sync');
var Server = require('../lib/server');

//console.dir(argv);

// Show help
if (argv.help) {
    Sync.help();
}

// Set display log to console
if (argv.console) {

}

// Test connection
if (argv.test) {
    Sync.testConnection();
}

// Running server mode
if (argv.server) {
    var port = argv.port || 8888;
    var host = argv.host || '127.0.0.1';

    Server.start(host, port);
}
